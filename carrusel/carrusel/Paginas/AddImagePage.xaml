             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="carrusel.Paginas.AddImagePage"
             Title="AddImagePage">


    <StackLayout Padding="20">
        <!-- imagen select -->
        <Image x:Name="imagenSeleccionada" HeightRequest="200" Aspect="AspectFit" />

        <!-- boton para seleccionar -->
        <Button Text="Seleccionar Imagen" Clicked="OnSelectImageClicked" />

        <!-- datos y boton para agregar -->
        <Entry x:Name="DescriptionEntry" Placeholder="DescripciÃ³n" />
        <DatePicker x:Name="UploadDatePicker" />
        <Button Text="Agregar" Clicked="OnAddImageClicked" />
    </StackLayout>

</ContentPage>
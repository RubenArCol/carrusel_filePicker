<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="carrusel.Paginas.ImageDetailPage"
             Title="Detalles">
    
    
    <StackLayout Padding="20" VerticalOptions="Center">
        <Image Source="{Binding ImagePath}" HeightRequest="300" />
        <Label Text="{Binding Description}" FontSize="Large" Margin="0,20,0,0"/>
        <Label Text="{Binding UploadDate, StringFormat='Subida el: {0:dd/MM/yyyy}'}" FontSize="Medium" />
    </StackLayout>
    
</ContentPage>